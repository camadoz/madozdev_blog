@model madozdev_blog.Models.Comment

@{
    ViewBag.Title = "Delete";
}
    <div class="row">

        <div class="offset-md-4 col-md-4" style="background-color:white; padding:10px;border:1px solid #F8F8F8;border-radius:5px;box-shadow: 0px 0px 2px 0px rgba(0,0,0,0.30);">



            <div class="ui negative message">
                <div class="header">
                    Are you sure you want to delete this comment?
                </div>
                <ul class="list">
                    <li><b>Blog Title:</b> @Html.DisplayFor(model => model.BlogPost.Title)</li>
                    <li><b>Comment:</b> @Html.Raw(Model.CommentBody)</li>
                    <li><b>Created:</b> @Html.Raw(Model.Created.ToString("MMM dd,yyyy"))</li>
                    <li><b>Updated:</b> @Html.Raw(Model.Updated?.ToString("MMM dd,yyyy"))</li>                    
                    <li><b>Reason for update:</b> @Html.DisplayFor(model => model.UpdateReason)</li>
                </ul>

            </div>


            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="ui red button" />

                    @Html.ActionLink("Back To Blog", "Details", "BlogPosts", new { Slug = Model.BlogPost.Slug }, new { @class = "ui orange button" })

                </div>
            }



        </div>

</div>